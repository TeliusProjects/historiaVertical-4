<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@color/Applicaction_Background"
    tools:context="com.example.admin.prova.PasswordActivity"
    >



        <EditText
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:textSize="20dp"
            android:fontFamily="sans-serif"
            android:background="@drawable/editext"
            android:hint="@string/oldPass"
            android:id="@+id/editOldPassword"
            android:inputType="textPassword"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="32dp"/>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:textSize="20dp"
            android:inputType="textPassword"
            android:fontFamily="sans-serif"
            android:hint="@string/newPass"
            android:background="@drawable/editext"
            android:id="@+id/editNewPassword"
            android:layout_marginBottom="5dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:textSize="20dp"
            android:fontFamily="sans-serif"
            android:inputType="textPassword"
            android:hint="@string/reNewPass"
            android:background="@drawable/editext"
            android:id="@+id/editRepeatNewPassword"
            android:layout_marginBottom="8dp"/>


    <Button

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/BttnChange"
        android:background="@drawable/colorbutton"
        android:layout_gravity="center"
        android:id="@+id/bttnChange"
        />
</LinearLayout>
